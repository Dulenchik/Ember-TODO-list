<div class='panel-heading'>
  <div class='row'>
    <div class='col-xs-1 text-center'>
      <span class='glyphicon glyphicon-list-alt' />
    </div>
    <div class='col-xs-8'>
      {{#if project.isEditable}}
        <div class='input-group'>
          {{input value=project.title class='form-control'}}
          <div class='input-group-btn'>
            <button class='btn btn-success' {{action "update"}}>
              <span class='glyphicon glyphicon-ok' />
            </button>

            <button class='btn btn-danger' {{action "cancel"}}>
              <span class='glyphicon glyphicon-remove' />
            </button>
          </div>
        </div>
      {{else}}
        <span class='panel-title'>{{project.title}}</span>
      {{/if}}
    </div>

    <div class='col-xs-3 text-right'>
      {{#unless project.isEditable}}
        <button class='btn btn-default' {{action "edit"}}>
          <span class='glyphicon glyphicon-pencil' />
        </button>
      {{/unless}}
      <button class='btn btn-default' {{action "removeProject"}}>
        <span class='glyphicon glyphicon-trash' />
      </button>
    </div>
  </div>
</div>

<div class='panel-body'>
  {{tasks-list tasks=tasks project=project}}
</div>

<div class='panel-footer text-right'>
  <span>Total: {{totalTasksCount}}</span>
  <span>Completed: {{completedTasksCount}}</span>
</div>
